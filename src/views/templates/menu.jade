    ion-header-bar.bar-positive
    ion-content
      ion-list
        ion-item(menu-close='', ng-click='ctrl.openLoginModal()')
          | Login
        ion-item(menu-close='', ui-sref='app.search')
          | Search
        ion-item(menu-close='', ui-sref='app.browse')
          | Browse
        ion-item(menu-close='', ui-sref='app.playlists')
          | Playlists

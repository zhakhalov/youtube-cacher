{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "ES5",
        "rootDir": ".",
        "sourceMap": true,
        "outDir": ".bin/www",
        "outFile": "./www/app/app.js",
        "sourceRoot": "/src/app/"
    },
    "filesGlob": [
        "./www/src/app/**/*.ts",
        "./typings/tsd.d.ts"
    ],
    "exclude": [
        "node_modules",
        "www/lib",
        "www/src"
    ]
}